# go-epay Docker Configuration
# Copy this file to .env and fill in your values

# ==========================================
# Billing System Selection (Required)
# ==========================================
# Choose which billing system to use: telcong or ucrm
BILLING_SYSTEM=telcong

# ==========================================
# ePay Configuration (Required)
# ==========================================
EPAY_SECRET=your_epay_secret_here
EPAY_MERCHANT_ID=your_merchant_id_here

# ==========================================
# TelcoNG Configuration
# ==========================================
# Required if BILLING_SYSTEM=telcong
TELCONG_BILLING_URL=https://billing.telcong.com
# The JWT key should be the full JSON content from TelcoNG IAM
TELCONG_JWT_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# ==========================================
# UCRM Configuration
# ==========================================
# Required if BILLING_SYSTEM=ucrm
UCRM_BILLING_URL=https://your-ucrm-instance.com
UCRM_API_KEY=your_ucrm_api_key
UCRM_METHOD_ID=1
UCRM_PROVIDER_NAME=ePay
UCRM_PROVIDER_PAYMENT_ID=
UCRM_PROVIDER_PAYMENT_TIME=
UCRM_ORGANIZATION_ID=1

# ==========================================
# Datastore Emulator (Optional, for UCRM)
# ==========================================
# Uncomment to use Datastore emulator for UCRM PaymentOrder storage
# Run with: docker-compose --profile with-datastore up
# DATASTORE_EMULATOR_HOST=datastore-emulator:8081

# ==========================================
# Server Configuration
# ==========================================
PORT=8080

# ==========================================
# Cloudflare Tunnel (Optional)
# ==========================================
# Get token from: https://one.dash.cloudflare.com/ -> Zero Trust -> Networks -> Tunnels
# Create tunnel, add public hostname pointing to http://goepay:8080
CLOUDFLARE_TUNNEL_TOKEN=
